@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email confirmation";
}
<style>
    .container {
        margin-top:6rem;
    }
</style>

<div class="vh-100 mt-5 container">
    <div class="bg-light d-flex align-items-center p-3">
       
            <div class="">
                <div class="">
                    <h1>@ViewData["Title"]</h1>

                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success" role="alert">
                        <p>Your email has been confirmed.</p>
                        <p><a href="/Identity/Account/Login" class="alert-link">Login</a> using your email to access your account.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            Oops! It seems there was an issue confirming your email. Please try again later.
                        </div>
                    }
                </div>
            </div>
        
    </div>

</div>
