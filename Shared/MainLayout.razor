@inherits LayoutComponentBase
@using Clarity_Crate.Pages

<PageTitle>Clarity Crate</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">

    <main>
        <MudLayout>
            <MudAppBar Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
                <MudSpacer />
                <!-- <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />-->
            </MudAppBar>
            <MudDrawer @bind-Open="@open" ClipMode="clipMode" Elevation="1">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">Clarity Crate</MudText>
                </MudDrawerHeader>
                <MudNavMenu>
                    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
                    <MudNavLink Href="/curriculums" Match="NavLinkMatch.All">Curriculums</MudNavLink>
                    <MudNavLink Href="/subjects" Match="NavLinkMatch.All">Subjects</MudNavLink>
                    <MudNavLink Href="/topics" Match="NavLinkMatch.All">Topics</MudNavLink>

                    <MudNavLink Href="/terms" Match="NavLinkMatch.All">Terms</MudNavLink>
                    <MudNavLink Href="/levels" Match="NavLinkMatch.All">Levels</MudNavLink>

                </MudNavMenu>
            </MudDrawer>
            <MudMainContent>
                <MudContainer>
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>

    </main>
</div>



@code {
    bool open = false;

    DrawerClipMode clipMode = DrawerClipMode.Docked;

    void ToggleDrawer()
    {
        open = !open;
    }
}